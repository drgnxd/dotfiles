# ~/.config/zsh/.aliases

has_cmd() {
    command -v "$1" >/dev/null 2>&1
}

# Modernize core commands
# ls -> eza (icons, git status, tree, grouping)
if has_cmd eza; then
    alias ls='eza --icons --git'
    alias ll='eza --icons --git -l'
    alias la='eza --icons --git -la'
    alias lt='eza --icons --git --tree'
fi

# grep -> rg (1-char shortcut)
has_cmd rg && alias g='rg'

# Application shortcuts
# LazyGit
has_cmd lazygit && alias lg='lazygit'

# fd (find replacement)
has_cmd fd && alias f='fd'

# bat (cat replacement)
has_cmd bat && alias cat='bat --paging=never'

# Taskwarrior (t alias points to wrapper function in .functions)
alias t='task'

# Unified upgrades
alias update='upgrade_all'

# opencode
if has_cmd opencode; then
    alias oc='opencode'
    alias ocd='opencode --continue'
fi

# chezmoi helpers
if has_cmd chezmoi; then
    alias c='chezmoi'
    alias ca='chezmoi apply'
    alias ce='chezmoi edit'
fi

unset -f has_cmd
