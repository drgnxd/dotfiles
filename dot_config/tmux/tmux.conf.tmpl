# Core settings (TrueColor, mouse, indexing)
set -g default-terminal "tmux-256color"
set -ga terminal-overrides ",xterm*:Tc"
set -g mouse on
set -g base-index 1
setw -g pane-base-index 1
set-option -g renumber-windows on

# Vim-like pane navigation
bind-key h select-pane -L
bind-key j select-pane -D
bind-key k select-pane -U
bind-key l select-pane -R

# Theme: Solarized Dark accents (borders, messages, mode)
set -g message-style "bg={{ .colors.solarized.blue }},fg={{ .colors.solarized.base03 }},bold"
set -g pane-border-style "fg={{ .colors.solarized.base02 }}"
set -g pane-active-border-style "fg={{ .colors.solarized.base01 }}"
setw -g clock-mode-colour "{{ .colors.solarized.blue }}"
set -g mode-style "bg={{ .colors.solarized.base02 }},fg={{ .colors.solarized.blue }}"

# Status bar: transparent and minimal
set -g status-style "bg=default,fg={{ .colors.solarized.base1 }}"
set -g status-justify left
set -g status-left-length 100
set -g status-right-length 0

# Left: session name (Starship-like glyphs)
set -g status-left "#{?client_prefix,#[fg={{ .colors.solarized.violet }}],#[fg={{ .colors.solarized.blue }}]}#[bg=default]#{?client_prefix,#[bg={{ .colors.solarized.violet }}],#[bg={{ .colors.solarized.blue }}]}#[fg={{ .colors.solarized.base03 }},bold]󰍹 #S#[fg=default,bg=default]#{?client_prefix,#[fg={{ .colors.solarized.violet }}],#[fg={{ .colors.solarized.blue }}]}"

# Center: window list
setw -g window-status-style "bg=default,fg={{ .colors.solarized.base01 }}"
setw -g window-status-format " #I:#W "
setw -g window-status-current-format "#[fg={{ .colors.solarized.base02 }},bg=default]#[fg={{ .colors.solarized.blue }},bg={{ .colors.solarized.base02 }},bold]#I:#W#[fg={{ .colors.solarized.base02 }},bg=default]"

# Right: empty
set -g status-right ""
