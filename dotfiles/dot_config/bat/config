[bat]
# Use Solarized Dark theme for syntax highlighting
theme = "Solarized (dark)"
# Enable true color if terminal supports it
true_color = true
# Use pager only when output is long
paging = "auto"
# Show line numbers by default
line_numbers = true
# Wrap long lines
wrap_lines = false
# Set tab width to 4 spaces
tab_width = 4
